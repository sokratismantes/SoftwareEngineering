<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Λευκό γεμάτο background -->
    <solid android:color="#FFFFFF" />

    <!-- Προαιρετικό λευκό περίγραμμα (μπορείς να το αλλάξεις ή να το αφαιρέσεις) -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <!-- Στρογγυλές γωνίες -->
    <corners android:radius="32dp" />

    <!-- Εσωτερικό padding (προαιρετικό αν το χρειάζεται) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
