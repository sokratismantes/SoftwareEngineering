<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Base.Theme.Smartmed1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Splash screen icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Προαιρετικό background -->
        <item name="android:windowSplashScreenBackground">#037988</item>

        <!-- Διάρκεια animation -->
        <item name="android:windowSplashScreenAnimationDuration">500</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.Smartmed1" parent="Base.Theme.Smartmed1" />
    <style name="Theme.SmartMed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>
