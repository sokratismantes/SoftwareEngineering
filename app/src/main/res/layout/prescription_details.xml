<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PrescriptionDetailsActivity">

    <!-- SmartMed Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:contentDescription="SmartMed Logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Prescription Code -->
    <TextView
        android:id="@+id/textViewPrescriptionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="#1230099"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <!-- Main Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrescriptionCode">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Diagnosis -->
            <TextView
                android:id="@+id/textViewDiagnosisLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Διάγνωση :"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewDiagnosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Λοιμώδης Φαρυγγίτιδα"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/textViewDiagnosisLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewDiagnosisLabel" />

            <!-- Medications -->
            <TextView
                android:id="@+id/textViewMedicationsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Φάρμακα :"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDiagnosis" />

            <TextView
                android:id="@+id/textViewMedications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1. Αμοξικιλλίνη 500mg – 1 κάψουλα κάθε 8 \n    ώρες για 7 ημέρες\n2. Ιβουπροφαίνη 400mg – 1 δισκίο κάθε 8 \n    ώρες, εφόσον υπάρχει πόνος ή πυρετός\n3. Αντισηπτικό στοματικό διάλυμα – Γαργάρες \n    3 φορές την ημέρα μετά τα γεύματα"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMedicationsLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Instructions -->
            <TextView
                android:id="@+id/textViewInstructionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Οδηγίες :"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMedications" />

            <TextView
                android:id="@+id/textViewInstructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Λήψη φαρμάκων με ένα ποτήρι νερό.\n• Αποφυγή αλκοόλ και ερεθιστικών τροφών.\n• Επανεξέταση σε 7 ημέρες, εάν τα \n  συμπτώματα επιμένουν."
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewInstructionsLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Doctor Name (within the card, aligned to bottom right) -->
            <TextView
                android:id="@+id/textViewDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ιατρός: Δημήτριος Αντωνίου"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewInstructions" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Adherence Section -->
    <TextView
        android:id="@+id/textViewAdherencePrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Καταγράψτε την συνέπεια σας στη λήψη φαρμάκων."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDetails" />

    <!-- Adherence Checkboxes -->
    <LinearLayout
        android:id="@+id/linearLayoutAdherenceCheckboxes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdherencePrompt">

        <CheckBox
            android:id="@+id/checkBoxMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Δευ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Τρι"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Τετ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Πεμ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Παρ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Σαβ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBoxSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Κυρ"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/buttonDownloadDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Λήψη Εγγράφου"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_gradient"
        android:padding="8dp"
        android:textSize="12sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAdherenceCheckboxes" />

    <Button
        android:id="@+id/buttonRenewPrescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Ανανέωση\nΣυνταγής"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_gradient"
        android:padding="8dp"
        android:textSize="12sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAdherenceCheckboxes" />

    <!-- Side Effects Section -->
    <TextView
        android:id="@+id/textViewSideEffectsPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Αναφέρετε παρενέργειες που προκλήθηκαν κατά\nτην χορήγηση."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDownloadDocument" />

    <EditText
        android:id="@+id/editTextSideEffects"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_edittext_background"
        android:gravity="top|start"
        android:hint="Πληκτρολογήστε εδώ..."
        android:padding="8dp"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSubmitSideEffects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSideEffectsPrompt" />

    <Button
        android:id="@+id/buttonSubmitSideEffects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Υποβολή"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_gradient"
        android:padding="8dp"
        android:textSize="12sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextSideEffects"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSideEffects"/>

    <!-- Contact Doctor Section -->
    <LinearLayout
        android:id="@+id/linearLayoutContactDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSideEffects">

        <!-- Chat Icon -->
        <ImageView 
            android:id="@+id/imageViewChat"
            android:layout_width="20dp" 
            android:layout_height="20dp" 
            android:src="@android:drawable/ic_menu_send" 
            android:contentDescription="Chat Icon" 
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/textViewContactDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Επικοινωνήστε με τον γιατρό σας"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout> 
